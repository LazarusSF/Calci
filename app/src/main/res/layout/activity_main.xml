<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:background="#1d3cd7"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:text="0"
        android:background="#000"
        android:textColor="#fff"
        android:id="@+id/resultscreen"
        android:textSize="50sp"
        android:gravity="end"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        >

        <TableRow android:orientation="vertical">

            <Button
                android:id="@+id/b7"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="7"
                android:textColor="#fff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b8"
                android:paddingLeft="40dp"
                android:textColor="#fff"
                android:paddingRight="40dp"
                android:text="8"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b9"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="9"
                android:textColor="#fff"
                android:textSize="30sp" />
            <Button
                android:text="C"
                android:id="@+id/bdel"
                android:textSize="30sp"
                android:textColor="#000"
                android:background="#f9e426"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                />

        </TableRow>
        <TableRow>
            <Button
                android:text="4"
                android:id="@+id/b4"
                android:textColor="#fff"
                android:textSize="30sp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                />
            <Button
                android:text="5"
                android:id="@+id/b5"
                android:textColor="#fff"
                android:textSize="30sp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                />
            <Button
                android:text="6"
                android:id="@+id/b6"
                android:textColor="#fff"
                android:textSize="30sp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                />
            <Button
                android:text="*"
                android:id="@+id/bmul"
                android:textSize="30sp"
                android:textColor="#fff"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                />

        </TableRow>
        <TableRow>
            <Button
                android:text="1"
                android:id="@+id/b1"
                android:textSize="30sp"
                android:textColor="#fff"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                />
            <Button
                android:text="2"
                android:id="@+id/b2"
                android:textSize="30sp"
                android:textColor="#fff"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                />
            <Button
                android:text="3"
                android:id="@+id/b3"
                android:textSize="30sp"
                android:textColor="#fff"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                />
            <Button
                android:text="+"
                android:id="@+id/bplus"
                android:textSize="30sp"
                android:textColor="#fff"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                />

        </TableRow>
        <TableRow>
        <Button
            android:text="."
            android:id="@+id/bdot"
            android:textSize="30sp"
            android:textColor="#fff"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            />
        <Button
            android:text="0"
            android:id="@+id/b0"
            android:textSize="30sp"
            android:textColor="#fff"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            />
        <Button
            android:id="@+id/bdiv"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="/"
            android:textColor="#fff"
            android:textSize="30sp"
            />

        <Button
            android:text="-"
            android:id="@+id/bsub"
            android:textSize="30sp"
            android:textColor="#fff"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            />

    </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/bequal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#AAffAA"
        android:text="EQUALS"
        android:textSize="30sp"

        />

</LinearLayout>